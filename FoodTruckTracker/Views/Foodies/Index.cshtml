@model FoodTruckTracker.Models.FoodieViewFoodTrucks

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Let's see who's around!</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FoodTrucks[0].FoodTruckName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FoodTrucks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FoodTruckName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
