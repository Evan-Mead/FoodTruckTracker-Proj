@model FoodTruckTracker.Models.FoodTruck

@{
    ViewData["Title"] = "Build Your Truck's Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Build Your Truck's Profile!</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodTruckName" class="control-label"></label>
                <input asp-for="FoodTruckName" class="form-control" />
                <span asp-validation-for="FoodTruckName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuisineType" class="control-label"></label>
                <input asp-for="CuisineType" class="form-control" />
                <span asp-validation-for="CuisineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckHistory" class="control-label"></label>
                <input asp-for="TruckHistory" class="form-control" />
                <span asp-validation-for="TruckHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckCrew" class="control-label"></label>
                <input asp-for="TruckCrew" class="form-control" />
                <span asp-validation-for="TruckCrew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Truck Info</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
